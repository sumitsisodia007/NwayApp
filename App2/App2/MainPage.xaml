<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App2"
             x:Class="App2.MainPage"
             Title="Notification">


    <AbsoluteLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                 AbsoluteLayout.LayoutFlags="All">
            <ListView  x:Name="GroupedView"
                    GroupDisplayBinding="{Binding Title}"
                    RowHeight="80"
                    HasUnevenRows="True"
                    GroupShortNameBinding="{Binding ShortName}"
                    IsGroupingEnabled="true"
                   ItemTapped="ListView_OnItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="20,0,0,0" Orientation="Horizontal">
                                <Label Text="{Binding Name}"
                                       TextColor="Navy"
                                       FontSize="15"
                                       HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding TagNotCount}"
                                       TextColor="Navy"
                                       FontSize="15"
                                       HorizontalOptions="CenterAndExpand"/>
                                <Label Text="{Binding Tag_Amount, StringFormat='&#x20b9;{0:N}'}"
                                       TextColor="Navy"
                                       FontSize="15"
                                       HorizontalOptions="EndAndExpand"/>
                                
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0" BackgroundColor="#E2F5F9" Margin="0">

                                <Button Image="{Binding StateIcon}"
                                        Text="{Binding TitleWithItemCount}"
                                        HorizontalOptions="FillAndExpand"
                                        BackgroundColor="Transparent"
                                        BorderColor="Transparent"
                                        BorderWidth="0"
                                        FontSize="13"
                                        Margin="0"
                                        Clicked="HeaderTapped" 
                                        CommandParameter="{Binding .}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
            </ListView>
        </StackLayout>


        <ContentView x:Name="overlay"
                 AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                 AbsoluteLayout.LayoutFlags="All"
                 IsVisible="False"
               
                 BackgroundColor="Transparent" Opacity="0.8">
            <Frame BackgroundColor="Black" Opacity="0.9" Padding="0" Margin="0">
                <StackLayout Orientation="Vertical" 
                               BackgroundColor="Black" 
                               Opacity="1"
                               WidthRequest="400" 
                               HorizontalOptions="FillAndExpand" 
                               VerticalOptions="FillAndExpand" >
                    <Label x:Name="lblNotificationType" BackgroundColor="Black" Font="24,Bold" TextColor="White" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" Text="&#x20b9; Notification" />
                    <Label x:Name="lblName" BackgroundColor="Black" Font="20,Bold" TextColor="White" HorizontalOptions="Fill" HorizontalTextAlignment="Center" Text="Add a Player" />

                    <ListView x:Name="MainlistView"                            
                              HasUnevenRows="True"                              
                              BackgroundColor="Gray"
                              SeparatorVisibility="None"
                              SeparatorColor="#4472C4">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Vertical"
                                                 VerticalOptions="FillAndExpand" Spacing="0">
                                        <StackLayout Orientation="Horizontal"
                                                 HorizontalOptions="FillAndExpand"
                                                  BackgroundColor="Black">

                                            <Label WidthRequest="{Binding txtWidth}" BackgroundColor="Black" HorizontalOptions="Start"  FontSize="15" Text="{Binding Party_Name}" TextColor="White" HorizontalTextAlignment="Start" />
                                            <Label WidthRequest="{Binding txtWidth}" BackgroundColor="Black" HorizontalOptions="EndAndExpand"  FontSize="15" Text="{Binding Amount, StringFormat='&#x20b9;{0:N}'}" TextColor="White" HorizontalTextAlignment="End" />

                                        </StackLayout>
                                        <BoxView BackgroundColor="White" HeightRequest="1"/>
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                        </StackLayout.GestureRecognizers>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Button Text="OK" 
                                 BackgroundColor="Black" FontSize="18" TextColor="White"
                                FontAttributes="Bold"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="CenterAndExpand"
                                Clicked="OnOKButtonClicked"/>
                    </StackLayout>

                </StackLayout>
            </Frame>

        </ContentView>
       
    </AbsoluteLayout>


</ContentPage>